@model IEnumerable<ScrewballResume.Models.Affiliation>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Applicant
            </th>
            <th>
                  Affiliation
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Applicant.FullName)
            </td>
            <td>
                <b>@Html.DisplayFor(modelItem => item.AffilOrg)</b> (@Html.DisplayFor(modelItem => item.Type)) - <i>@Html.DisplayFor(modelItem => item.Role)</i>, @Html.DisplayFor(modelItem => item.From) - @Html.DisplayFor(modelItem => item.To)<br/>
                @Html.DisplayFor(modelItem => item.AffilURL)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.AffiliationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AffiliationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AffiliationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="Applicants" asp-action="Index">Back to Applicants List</a>