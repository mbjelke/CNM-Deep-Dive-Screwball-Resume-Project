@model ScrewballResume.Models.Affiliation

@{
    ViewData["Title"] = "Create a new Affiliation";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Affiliation</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ApplicantID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ApplicantID" class ="form-control" asp-items="ViewBag.ApplicantID">
                    <option value="">-- Select Applicant --</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AffilOrg" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AffilOrg" class="form-control" />
                <span asp-validation-for="AffilOrg" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Role" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Role" class="form-control" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="From" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="From" class="form-control" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="To" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="To" class="form-control" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AffilURL" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AffilURL" class="form-control" />
                <span asp-validation-for="AffilURL" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsCurrent" />
                    <label asp-for="IsCurrent"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to Affiliations List</a><br/>
    <a asp-controller="Applicants" asp-action="Index">Back to Applicants List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
