@model ScrewballResume.Models.Reference

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Reference</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ReferenceID" />
        <div class="form-group">
            <label asp-for="ApplicantID" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ApplicantID" class="form-control" asp-items="ViewBag.ApplicantID">
                    <option value="">-- Select Applicant --</option>
                </select>
                <span asp-validation-for="ApplicantID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MiddleInit" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MiddleInit" class="form-control" />
                <span asp-validation-for="MiddleInit" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ReferenceDesc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ReferenceDesc" class="form-control" />
                <span asp-validation-for="ReferenceDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to References List</a><br />
    <a asp-controller="Applicants" asp-action="Index">Back to Applicants List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
