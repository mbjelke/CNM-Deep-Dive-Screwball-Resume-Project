@model IEnumerable<ScrewballResume.Models.Education>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>Applicant</th><th>
                    @Html.DisplayNameFor(model => model.OrgName)
                </th>
                <th>
                   Education
                </th>
                
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Applicant.FullName)
            </td>
            <td>
                <b>@Html.DisplayFor(modelItem => item.OrgName)</b>, <i>@Html.DisplayFor(modelItem => item.Location)</i>, @Html.DisplayFor(modelItem => item.From) - @Html.DisplayFor(modelItem => item.To)<br/>
                <b>Degree: </b> @Html.DisplayFor(modelItem => item.DegreeAttained), Concentration In @Html.DisplayFor(modelItem => item.ConcentrationIn)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.EducationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EducationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EducationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-controller="Applicants" asp-action="Index">Back to Applicants List</a>