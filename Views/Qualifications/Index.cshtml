@model IEnumerable<ScrewballResume.Models.Qualification>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New Qualification for an Applicant</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>Applicant</th>
            <th>
                    @Html.DisplayNameFor(model => model.Skill)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Applicant.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skill)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.QualificationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.QualificationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.QualificationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-controller="Applicants" asp-action="Index">Back to Applicants List</a>

