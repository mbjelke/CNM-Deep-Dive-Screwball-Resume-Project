@model ScrewballResume.Models.Qualification

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Qualification</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="QualificationID" />
        <div class="form-group">
            <label asp-for="ApplicantID" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ApplicantID" class="form-control" asp-items="ViewBag.ApplicantID"></select>
                <span asp-validation-for="ApplicantID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Skill" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Skill" class="form-control" />
                <span asp-validation-for="Skill" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to Qualifications List</a><br />
    <a asp-controller="Applicants" asp-action="Index">Back to Applicants List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
